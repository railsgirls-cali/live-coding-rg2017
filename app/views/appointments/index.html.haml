%h1 Citas
.container

  %table.table.table-hover
    %thead
      %tr
        %th Paciente
        %th Doctor
        %th Nombre
        %th Desde
        %th Hasta
        %th{:colspan => "3"}
    %tbody
      - @appointments.each do |appointment|
        %tr
          %td= appointment.patient_id
          %td= appointment.doctor_id
          %td= appointment.name
          %td= appointment.start_time
          %td= appointment.end_time
          %td= link_to 'Mostrar', appointment
          %td= link_to 'Editar', edit_appointment_path(appointment)
          %td= link_to 'Eliminar', appointment, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Appointment', new_appointment_path, class: 'btn btn-sm btn-info float-right'
  %br
  %br
  %br
  %br
  .col-12
    #appointmentsContainer




