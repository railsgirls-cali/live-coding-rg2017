= form_for(disease) do |f|
  - if disease.errors.any?
    #error_explanation
      %h2
        = pluralize(disease.errors.count, "error")
        prohibited this disease from being saved:
      %ul
        - disease.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit
