%h1 Listing doctors
= search_form_for @q do |f|
  =f.label :profile_name_cont
  =f.search_field :profile_name_cont

%table
  %thead
    %tr
      %th
      %th
      %th

  %tbody
    - @doctors.each do |doctor|
      %tr
        %td= link_to 'Show', doctor
        %td= link_to 'Edit', edit_user_path(doctor)
        %td= link_to 'Destroy', doctor, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Doctor', new_user_path
